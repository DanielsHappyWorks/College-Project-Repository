package Utility;

import java.io.File;
import java.io.IOException;

import Controller.ShowManager;

public class FileUtillity {
	public static boolean open(String path, String name, String permissions, ShowManager manager)
	{
		File file = new File(path,name);
	    if(file.exists() ){
	    	manager = new ShowManager(path , name , permissions);
	    	return true;
	    }
	    else{
	    	System.out.println("File or path does not exist");
	    	return false;
	    }
	}
	
	public boolean create(String path, String name)
	{
		try {
			File folder = new File(path);
			if(folder.exists() == false){
				folder.mkdirs();
			}

			 File file = new File(path,name);
			 if(file.exists() == false){
				 file.createNewFile();
				 System.out.println("The file was created");
				 return true;
			 }
			 else{
				 System.out.println("The file already exists!");
				 return false;
			 }
		} catch (IOException e) {
			e.printStackTrace();
			return false;
		}
	}
	
	public boolean delete(String path, String name)
	{
		File file = new File(path, name);
	    if(file.exists() ){
	    	file.delete();
	    	System.out.println("The file was deleated");
	    	return true;
	    }
	    else{
	    	System.out.println("File or path does not exist");
	    	return false;
	    }
	}
}
